{
    "name": "HTTP Toolkit",
    "description": " A browser extension used in HTTP Toolkit",
    "version": "1.0.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "build/background.js"
    },
    "permissions": [
        "proxy"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "run_at": "document_start",
            "all_frames": true,
            "match_about_blank": true,
            "js": [
                "build/content-script.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["build/injected-script.js"],
            "matches": ["*://*/*"]
        }
    ]
}